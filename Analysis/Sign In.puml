@startuml
allowmixing
left to right direction

actor "User (Student/Instructor)" as User

rectangle "Sign In" {
  boundary "Login UI" as B1
  control "Auth Controller" as C1
  entity "Auth Service" as E1
  entity "User Account" as E2

  User --> B1
  B1 --> C1 : submit credentials
  C1 --> E1 : verify()
  C1 --> E2 : load profile
  B1 <-- C1 : show result
}
@enduml
